@model BugTracker.Models.UserViewModel

@{
    ViewBag.Title = "Change Password";
}

<h2>Change Password</h2>
<hr/>

<form asp-action="ProcessChangePassword" method="post">
    <input type="hidden" asp-for="Id" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="username"></label>
        <input asp-for="username" disabled class="form-control" />
   
    </div>
    <div class="form-group">
        <label asp-for="password"></label>
        <input asp-for="password" placeholder="new password"  class="form-control" />
        <span asp-validation-for="password" class="text-danger"></span>
    </div>
  
    <button type="submit" class="btn btn-primary">Change Password</button>
</form>
